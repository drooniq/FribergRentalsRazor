@page
@model FribergRentalsRazor.Pages.Admin.Car.IndexModel

@{
    ViewData["Title"] = "Index";
}

<partial name="_authAdmin" />

<div class="panel neutral">
<h1>Admin - Listing all cars</h1>

<p>
    <a class="btn positive" asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].CostPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].ImageUrls)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Car)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPerDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    <img src="@item.ImageUrls[0].ToString()" alt="@item.Brand @item.Model" width="100" height="auto" />
                </td>
                <td>
                    <a class="btn-sm function" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn-sm function" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn-sm error" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>