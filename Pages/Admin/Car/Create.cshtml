@page
@model FribergRentalsRazor.Pages.Admin.Car.CreateModel

@{
    ViewData["Title"] = "Create";
}

<partial name="_authAdmin" />

<h1>Admin Car - Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Comment" class="control-label"></label>
                <input asp-for="Car.Comment" class="form-control" />
                <span asp-validation-for="Car.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CostPerDay" class="control-label"></label>
                <input asp-for="Car.CostPerDay" class="form-control" />
                <span asp-validation-for="Car.CostPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ImageUrls" class="control-label"></label>
                <input asp-for="Car.ImageUrls">
                    <a class="btn btn-primary" asp-for-page="./Edit">Add Image</a>
                </input>
                <span asp-validation-for="Car.ImageUrls" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
