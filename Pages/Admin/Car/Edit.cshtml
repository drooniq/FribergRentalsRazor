@page
@model FribergRentalsRazor.Pages.Admin.Car.EditModel

@{
    ViewData["Title"] = "Edit";
}

<partial name="_authAdmin" />

<div class="panel neutral">
    <h1>Admin - Edit a car</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                @if (ModelState.ErrorCount > 0)
                {
                    <div class="msg error" asp-validation-summary="All"></div>
                }
                <input type="hidden" asp-for="Car.Id" />
                <div class="form-group">
                    <label asp-for="Car.Brand" class="control-label"></label>
                    <input asp-for="Car.Brand" class="form-size" />
                </div>
                <div class="form-group">
                    <label asp-for="Car.Model" class="control-label"></label>
                    <input asp-for="Car.Model" class="form-size" />
                </div>
                <div class="form-group">
                    <label asp-for="Car.Year" class="control-label"></label>
                    <input asp-for="Car.Year" class="form-size" />
                </div>
                <div class="form-group">
                    <label asp-for="Car.Comment" class="control-label"></label>
                    <input asp-for="Car.Comment" class="form-size" />
                </div>
                <div class="form-group">
                    <label asp-for="Car.CostPerDay" class="control-label"></label>
                    <input asp-for="Car.CostPerDay" class="form-size" />
                </div>
                <div class="form-group">
                    <label asp-for="Car.ImageUrls[0]" class="control-label"></label>
                    <input asp-for="Car.ImageUrls[0]" class="form-size" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn positive" />
                    <a class="btn cancel" asp-page="./Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
