@{
}<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
        </li>
        @{
            if (Context.Session.GetString("LoggedInAdmin") != null)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Car/Index">Cars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Customer/Index">Customers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Booking/Index">Bookings</a>
                </li>
            }
            else if (Context.Session.GetString("LoggedInCustomer") != null)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Customer/Car/Index">Cars</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Customer/Booking/Index">Bookings</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Customer/Car/Index">Cars</a>
                </li>
            }
        }
    </ul>
</div>

<div class="loggedUser">
    <ul class="navbar-nav flex-grow-1">
        @{
            if (Context.Session.GetString("LoggedInAdmin") != null)
            {
                <li class="nav-item">
                    <h4 class="nav-link">Logged in as Admin: @Context.Session.GetString("LoggedInAdmin")</h4>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
                </li>
            }
            else if (Context.Session.GetString("LoggedInCustomer") != null)
            {
                <li class="nav-item">
                    <h4 class="nav-link">Logged in as Customer: @Context.Session.GetString("LoggedInCustomer")</h4>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                </li>
            }
        }
    </ul>
</div>
